{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "palette": {
        "base3": "#fdf6e3",
        "base2": "#eee8d5",
        "base1": "#93a1a1",
        "base0": "#839496",
        "base00":"#657b83",
        "base01":"#586e75",
        "base02":"#073642",
        "base03":"#002b36",
        "solarized_yellow": "#b58900",
        "solarized_orange":"#cb4b16",
        "solarized_red":"#dc322f",
        "solarized_magenta":"#d33682",
        "solarized_violet":"#6c71c4",
        "solarized_blue":"#268bd2",
        "solarized_cyan":"#2aa198",
        "solarized_green":"#859900"
    },
    "blocks": [
        {
            "alignment": "left",
            "segments": [
                {
                    "background": "p:solarized_red",
                    "background_templates": [
                        "{{ if .Root }}p:solarized_cyan{{ end }}"
                    ],
                    "style": "diamond",
                    "leading_diamond": "\u256d\u2500\ue0b6",
                    "template": "{{ if .Root }}\udb86\udc98{{else}}\uf007{{ end }} {{ .UserName }} ",
                    "type": "session"
                },
                {
                    "background": "p:solarized_magenta",
                    "style": "diamond",
                    "template": " {{.Icon}} ",
                    "type":"os"
                },
                {
                    "background": "p:solarized_magenta",
                    "background_templates": [
                        "{{ if .SSHSession }}p:solarized_violet{{ end }}"
                    ],
                    "style": "diamond",
                    "trailing_diamond": "\ue0b4",
                    "template": "{{ if .SSHSession }} \uf233{{ else }}\udb80\udf79{{ end }} {{ .HostName }} ",
                    "type": "session"
                },
                {
                    "background": "p:solarized_green",
                    "properties": {
                        "folder_separator_icon": "/",
                        "style": "full"
                    },
                    "style": "diamond",
                    "leading_diamond": "\ue0b6",
                    "trailing_diamond": "\ue0b4",
                    "template": "\uf07c {{ .Path }}",
                    "type": "path"
                },
                {
                    "background": "p:solarized_violet",
                    "properties": {
                        "display_mode": "environment",
                        "fetch_virtual_env": true
                    },
                    "style": "diamond",
                    "leading_diamond": "\ue0b6",
                    "trailing_diamond": "\ue0b4",
                    "template": "\ue235 {{ .Venv }} ",
                    "type": "python"
                },
                {
                    "background": "p:base0",
                    "background_templates": [
                        "{{ if or (.Working.Changed) (.Staging.Changed) }}p:solarized_yellow{{ end }}",
                        "{{ if and (gt .Ahead 0) (gt .Behind 0) }}p:solarized_orange{{ end }}",
                        "{{ if gt .Ahead 0 }}p:solarized_cyan{{ end }}",
                        "{{ if gt .Behind 0 }}p:solarized_red{{ end }}"
                    ],
                    "properties": {
                        "fetch_stash_count": true,
                        "fetch_status": true
                    },
                    "template": " {{ .UpstreamIcon }}{{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uf044{{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uf4a7{{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} \uf0c7{{ .StashCount }}{{ end }} ",
                    "style": "diamond",
                    "leading_diamond": "\ue0b6",
                    "trailing_diamond": "\ue0b4",
                    "type": "git"
                }
            ],
            "type": "prompt"
        },
        {
            "alignment": "right",
            "segments": [
                {
                    "background": "p:solarized_cyan",
                    "style": "diamond",
                    "leading_diamond": "\ue0b6",
                    "trailing_diamond": "\ue0b4",
                    "template": "\uf017 </>{{ .CurrentDate | date .Format }}",
                    "type": "time"
                },
                {
                    "background_templates": [
                        "{{if eq \"Charging\" .State.String}}p:solarized_violet{{end}}",
                        "{{if eq \"Discharging\" .State.String}}p:solarized_yellow{{end}}",
                        "{{if eq \"Full\" .State.String}}p:solarized_blue{{end}}"
                    ],
                    "background": "#242424",
                    "style": "diamond",
                    "leading_diamond": "\ue0b6",
                    "trailing_diamond": "\ue0b4",
                    "template": " {{ if not .Error }}{{ .Icon }}{{ .Percentage }}{{ end }}{{ .Error }}\uf295 \ueb2d ",
                    "type": "battery"
                }
            ],
            "type": "prompt",
            "overflow": "hide"
        },
        {
            "alignment": "left",
            "newline": true,
            "type": "prompt",
            "segments": [
                {
                    "style": "plain",
                    "foreground":"p:solarized_blue",
                    "type":"text",
                    "template": "\u2570\u2500"
                },
                {
                    "foreground": "p:solarized_green",
                    "foreground_templates": [
                        "{{ if gt .Code 0 }}p:solarized_red{{ end }}"
                    ],
                    "properties": {
                        "always_enabled": true
                    },
                    "style":"plain",
                    "template": "{{ if gt .Code 0 }}\uf2d3{{ else }}\udb80\udd33{{ end }}",
                    "type": "status"
                },
                {
                    "style": "plain",
                    "foreground":"p:solarized_blue",
                    "type":"text",
                    "template": "\uf061"
                }
            ]
        }
    ],
    "secondary_prompt": {
        "foreground":"p:solarized_blue",
        "template": "\udb85\udfa9"
    },
    "transient_prompt": {
        "foreground":"p:solarized_blue",
        "template": "\uf061 "
    },
    "console_title_template": "{{ .Shell }} in {{ .Folder }}",
    "final_space": true,
    "version": 3
}
